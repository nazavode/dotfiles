// this file must be linked from ~/.vscode/settings.json
// (stowed link) to vscode settings location
// (see here: https://goo.gl/5Vzdwc)
{
    "editor.fontSize": 16,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/*.egg-info": true,
        "**/.idea": true,
        "**/.tox": true,
        "**/.cache": true,
        "**/.venv": true,
    },
    "files.associations": {
        ".flake8": "ini",
        ".pylint": "ini"
    },
    "python.promptToInstallJupyter": false,
    "python.unitTest.pyTestEnabled": true,
    "workbench.iconTheme": "vs-minimal",
}